{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "skipLibCheck": true,
    "declaration": true
  }
}